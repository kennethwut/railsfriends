<div class="card">
  <div class="card-header">
	<h3>Forgot your password?</h3>
  </div>
<div class="card-body">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  	<div class="field form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, class:"form-control", placeholder:"example@example.com", autofocus: true, autocomplete: "email" %>
  	</div>
  	<br>
  	<div class="actions">
    <%= f.submit "Send me reset password instructions", class:"btn btn-secondary" %>
    <% end %>
	</div>
  </div>
</div>
<br>
<%= render "devise/shared/error_messages", resource: resource %>
<%= render "devise/shared/links" %>